<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/requirement_edit_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical">

    <EditText
        android:id="@+id/amount"
        android:inputType="text"
        android:text="500g"
        android:hint="@string/requirement_hint_amount"
        android:theme="@style/LargeText"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/name"
        android:inputType="text"
        android:theme="@style/LargeText"
        android:layout_marginStart="@dimen/spacing"
        android:text="cod tails with skin"
        android:hint="@string/requirement_hint_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/delete"
        android:src="@drawable/ic_remove_circle_outline_gray_24dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>